{
  "type": "APL",
  "version": "1.1",
  "import": [
    {
      "name": "simple_import",
      "version": "0.9"
    }
  ],
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "item": {
      "type": "Container",
      "width": "100%",
      "height": "100%",
      "items": [
        {
          "type": "TouchWrapper",
          "id": "touchWrapper",
          "width": "100%",
          "height": "50%",
          "onPress": [
            {
              "type": "SetValue",
              "componentId": "text",
              "property": "text",
              "value": "New very long text that is likely to be bigger than container for initial one to trigger text measurement recalculation."
            },
            {
              "type": "SendEvent",
              "arguments": [
                "some argument with binding: ${event.target.opacity}"
              ],
              "components": [
                "text",
                "touchWrapper"
              ]
            }
          ],
          "item": {
            "type": "Text",
            "id": "text",
            "text": "Short text.",
            "inheritParentState": true,
            "style": "textStyle"
          }
        },
        {
          "type": "Sequence",
          "id": "sequence",
          "width": "100%",
          "height": "50%",
          "numbered": "true",
          "data": "${payload.listdata}",
          "scrollDirection": "vertical",
          "onScroll": [
            {
              "type": "SetValue",
              "componentId": "text",
              "property": "text",
              "value": "scrolled"
            }
          ],
          "item": {
            "type": "Container",
            "direction": "row",
            "id": "container${ordinal}",
            "spacing": 0,
            "separator": true,
            "height": 120,
            "alignItems": "center",
            "inheritParentState": true,
            "items": [
              {
                "type": "Frame",
                "style": "flip",
                "id": "frame${ordinal}",
                "inheritParentState": true,
                "borderRadius": 45,
                "width": 60,
                "height": 60,
                "item": {
                  "type": "Text",
                  "text": "${ordinal}",
                  "style": "textStyle",
                  "width": 60,
                  "height": 60,
                  "textAlign": "center",
                  "textAlignVertical": "center"
                }
              },
              {
                "type": "Image",
                "source": "${data.imageSource}",
                "inheritParentState": true,
                "spacing": 24,
                "width": 100,
                "height": 100,
                "borderRadius": 10
              },
              {
                "type": "Text",
                "id": "text${ordinal}",
                "text": "${data.item}",
                "style": "textStyle",
                "inheritParentState": true,
                "grow": 1,
                "shrink": 1,
                "spacing": 24
              }
            ]
          }
        }
      ]
    }
  }
}