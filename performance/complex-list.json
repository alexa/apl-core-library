    "_textStyleTextButton": {
      "extend": [
        "textStyleSecondary2"
      ]
    },
    "flat": {
      "values": [
        {
          "backgroundColor": "transparent",
          "borderColor": "transparent",
          "borderWidth": "@buttonBorderWidth",
          "color": "@colorTextPrimary"
        },
        {
          "when": "${state.focused}",
          "borderColor": "@colorTextPrimary"
        },
        {
          "when": "${state.pressed}",
          "backgroundColor": "@colorButtonActivated"
        },
        {
          "when": "${state.disabled}",
          "color": "@colorTextDisabled"
        }
      ]
    },
    "raised": {
      "values": [
        {
          "backgroundColor": "@colorButtonNormal",
          "borderColor": "transparent",
          "borderWidth": "@buttonBorderWidth",
          "color": "@colorTextPrimary"
        },
        {
          "when": "${state.focused}",
          "backgroundColor": "transparent",
          "borderColor": "@colorTextPrimary"
        },
        {
          "when": "${state.pressed}",
          "backgroundColor": "@colorButtonActivated"
        },
        {
          "when": "${state.disabled}",
          "color": "@colorTextDisabled"
        }
      ]
    },
    "outline": {
      "values": [
        {
          "backgroundColor": "transparent",
          "borderColor": "@colorAccent",
          "borderWidth": "@buttonBorderThin",
          "color": "@colorAccent"
        },
        {
          "when": "${state.focused}",
          "backgroundColor": "transparent",
          "borderColor": "@colorTextPrimary",
          "borderWidth": "@buttonBorderWidth",
          "color": "@colorTextPrimary"
        },
        {
          "when": "${state.pressed}",
          "backgroundColor": "rgb(${@colorAccent}, ${@buttonOutlinePressedOpacity})"
        },
        {
          "when": "${state.disabled}",
          "borderColor": "@colorTextDisabled",
          "color": "@colorTextDisabled"
        }
      ]
    },
    "buttonDefault": {
      "extend": [
        "flat"
      ]
    },
    "toggle": {
      "description": "Color styling used for text and icon toggle buttons",
      "values": [
        {
          "color": "@colorControlNormal",
          "backgroundColor": "transparent",
          "borderColor": "transparent",
          "borderWidth": "@buttonBorderWidth"
        },
        {
          "when": "${state.focused}",
          "color": "@colorControlNormal",
          "backgroundColor": "transparent",
          "borderColor": "@colorControlNormal"
        },
        {
          "when": "${state.pressed}",
          "color": "@colorControlNormal",
          "backgroundColor": "@colorButtonActivated",
          "borderColor": "transparent"
        },
        {
          "when": "${state.checked}",
          "color": "@colorAccent",
          "backgroundColor": "transparent",
          "borderColor": "transparent"
        },
        {
          "when": "${state.checked && state.focused}",
          "color": "@colorAccent",
          "backgroundColor": "transparent",
          "borderColor": "@colorControlNormal"
        },
        {
          "when": "${state.checked && state.pressed}",
          "color": "@colorAccent",
          "backgroundColor": "rgba(${@colorAccent}, 0.25)",
          "borderColor": "transparent"
        },
        {
          "when": "${state.disabled}",
          "color": "@colorTextDisabled",
          "backgroundColor": "transparent",
          "borderColor": "transparent"
        }
      ]
    },
    "icon": {
      "description": "Default style for icon buttons",
      "values": [
        {
          "color": "@colorControlNormal",
          "backgroundColor": "transparent",
          "borderColor": "transparent",
          "borderWidth": "@buttonBorderWidth"
        },
        {
          "when": "${state.focused}",
