    {
      "description": "Standard font sizes",
      "dimensions": {
        "textSizeClock": 84,
        "textSizeDisplay": 120,
        "textSizePrimaryHint": 28,
        "textSizeTitle": 60,
        "textSizeBody": 48,
        "textSizeSubtitle": 36,
        "textSizePrimary": 27,
        "textSizeSecondary": 23,
        "textSizeDetails": 20,
        "textSizeCaption": 15,
        "textSizeSecondaryHint": 25
      }
    },
    {
      "description": "Common spacing values",
      "dimensions": {
        "spacingThin": 6,
        "spacingSmall": 12,
        "spacingMedium": 24,
        "spacingLarge": 48,
        "spacingExtraLarge": 72
      }
    },
    {
      "description": "Common margins and padding",
      "dimensions": {
        "marginTop": 40,
        "marginLeft": 60,
        "marginRight": 60,
        "marginBottom": 40
      }
    },
    {
      "description": "Standard button definitions",
      "numbers": {
        "buttonOutlinePressedOpacity": 0.2,
        "buttonActivatedPressedOpacity": 0.25,
        "backgroundPressedOpacity": 0.25,
        "overlayDisabledOpacity": 0.5
      },
      "dimensions": {
        "buttonNormalHeight": 80,
        "buttonMinWidth": 160,
        "buttonInnerHeight": 48,
        "buttonInnerPaddingLeftRight": 16,
        "buttonOuterPaddingLeftRight": 8,
        "buttonInnerMinWidth": 142,
        "buttonBorderWidth": 2,
        "buttonBorderRadius": 4,
        "buttonBorderThin": 1,
        "iconButtonHeight": 80,
        "iconButtonWidth": 80,
        "iconButtonInnerHeight": 48,
        "iconButtonInnerWidth": 48,
        "iconButtonInnerPadding": 16,
        "iconButtonBorderWidth": 2
      }
    }
  ],
