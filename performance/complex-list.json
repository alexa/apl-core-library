      "description": "Used for normal overlay button",
      "values": [
        {
          "color": "transparent",
          "backgroundColor": "transparent",
          "borderColor": "transparent",
          "borderWidth": "@buttonBorderWidth"
        },
        {
          "when": "${state.focused}",
          "borderColor": "@colorTextPrimary"
        },
        {
          "when": "${state.pressed}",
          "color": "rgba(${@colorControlNormal}, ${@backgroundPressedOpacity})"
        },
        {
          "when": "${state.disabled}",
          "color": "rgba(${@colorBackground}, ${@overlayDisabledOpacity})"
        }
      ]
    },
    "touchableBackground": {
      "description": "Used for normal list items",
      "values": [
        {
          "color": "transparent",
          "backgroundColor": "transparent",
          "borderColor": "transparent",
          "borderWidth": "@buttonBorderWidth"
        },
        {
          "when": "${state.focused}",
          "borderColor": "@colorTextPrimary"
        },
        {
          "when": "${state.pressed}",
          "backgroundColor": "rgba(${@colorControlNormal}, ${@backgroundPressedOpacity})"
        }
      ]
    },
    "touchableDefault": {
      "description": "Default style for touchable",
      "extend": "touchableBackground"
    }
  },
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "item": {
      "type": "Container",
      "width": "100%",
      "height": "100%",
      "items": [
        {
          "type": "Header",
          "title": "My Cool List",
          "subtitle": "of things to do",
          "paddingLeft": "@marginLeft",
          "paddingRight": "@marginRight",
          "paddingTop": "@marginTop",
          "position": "absolute",
          "item": {
            "type": "Sequence",
            "id": "myTodoList",
            "data": "${payload.listdata}",
            "scrollDirection": "vertical",
            "numbered": true,
            "width": "100%",
            "height": "100%",
            "grow": 1,
            "shrink": 1,
            "item": {
              "type": "TouchWrapper",
              "separator": true,
              "id": "touchwrapper1",
              "item": {
                "type": "Container",
                "direction": "row",
                "id": "container${ordinal}",
                "spacing": 0,
                "separator": true,
                "height": 120,
                "alignItems": "center",
                "inheritParentState": true,
                "items": [
                  {
                    "type": "Frame",
                    "style": "flip",
                    "id": "frame${ordinal}",
                    "inheritParentState": true,
                    "borderRadius": 45,
                    "width": 60,
                    "height": 60,
                    "item": {
                      "type": "Text",
                      "text": "${ordinal}",
                      "style": "textStylePrimary2",
                      "color": "@colorTextPrimaryInverse",
                      "width": 60,
                      "height": 60,
                      "textAlign": "center",
                      "textAlignVertical": "center"
                    }
                  },
                  {
                    "type": "Image",
                    "source": "${data.imageSource}",
                    "inheritParentState": true,
                    "spacing": 24,
                    "width": 100,
                    "height": 100,
                    "borderRadius": 10
                  },
                  {
                    "type": "Text",
                    "id": "text${ordinal}",
                    "text": "${data.item}",
                    "style": "flip",
