{
  "type": "APL",
  "version": "1.1",
  "theme": "auto",
  "layouts": {
    "Header": {
      "parameters": [
        "title",
        "subtitle",
        "logo",
        "item"
      ],
      "items": [
        {
          "description": "*********** Header for Round screens *************",
          "when": "${viewport.shape == 'round'}",
          "type": "Container",
          "orientation": "column",
          "alignItems": "center",
          "height": "100%",
          "width": "100%",
          "items": [
            {
              "type": "Image",
              "height": "textSizeSecondary",
              "source": "${logo}",
              "when": "${logo}"
            },
            {
              "type": "Text",
              "text": "${title}",
              "style": "textStyleDetails0",
              "spacing": "@spacingSmall",
              "maxLines": 1
            },
            {
              "type": "Text",
              "text": "${subtitle}",
              "style": "textStyleDetails0",
              "maxLines": 1
            },
            {
              "type": "Container",
              "items": "${item}",
              "grow": 1,
              "shrink": 1
            }
          ]
        },
        {
          "description": "*********** Header for rectangular screens *************",
          "type": "Container",
          "orientation": "column",
          "height": "100%",
          "width": "100%",
          "items": [
            {
              "type": "Container",
              "direction": "row",
              "justifyContent": "spaceBetween",
              "items": [
                {
                  "type": "TitleSubtitle",
                  "title": "${title}",
                  "subtitle": "${subtitle}"
                },
                {
                  "type": "Image",
                  "height": "textSizeSecondary",
                  "source": "${logo}"
                }
              ]
            },
            {
              "type": "Container",
              "items": "${item}",
              "grow": 1,
              "shrink": 1
            }
          ]
        }
      ]
    },
    "TitleSubtitle": {
      "description": "*********** Title | Subtitle block *************",
      "parameters": [
        "title",
        "subtitle"
      ],
      "item": [
        {
          "when": "${subtitle}",
          "type": "Container",
          "direction": "row",
          "items": [
            {
              "type": "Text",
              "style": "textStyleSecondary2",
              "text": "${title}"
            },
            {
              "type": "Text",
              "style": "textStyleSecondary2",
              "text": "|",
              "spacing": 15
            },
            {
              "type": "Text",
              "style": "textStyleSecondary1",
              "text": "${subtitle}",
              "spacing": 15
            }
          ]
        },
        {
          "type": "Text",
          "style": "textStyleSecondary2",
          "text": "${title}"
        }
      ]
    },
    "Circle": {
      "description": "**************** Circle ****************",
      "parameters": [
        "number"
      ],
      "item": {
        "type": "Frame",
        "backgroundColor": "@colorControlNormal",
        "borderRadius": 1000,
        "alignItems": "center",
        "justifyContent": "center",
        "item": {
          "type": "Text",
          "style": "textStyleDetails2",
          "maxLines": 1,
          "width": 52,
          "height": 52,
          "textAlign": "center",
          "textAlignVertical": "center",
          "text": "${number}",
          "color": "@colorTextPrimaryInverse"
        }
      }
    },
    "TwoLineTitle": {
      "description": "*************** Two Line title at the top for a landscape screen **************",
      "parameters": [
        "title",
        "subtitle",
        "hint",
        "items"
      ],
      "item": {
        "type": "Container",
        "alignItems": "${viewport.shape == 'round' ? 'center': 'start'}",
        "height": "100%",
        "width": "100%",
        "items": [
          {
            "type": "Container",
            "height": "${viewport.shape == 'round' ? 160 : 128}",
            "justifyContent": "center",
            "alignItems": "${viewport.shape == 'round' ? 'center': 'start'}",
            "items": [
              {
                "type": "Text",
                "text": "${title}",
                "id": "twoLineTitleTitle"
              },
              {
                "type": "Text",
                "text": "${subtitle}",
                "style": "textStyleSecondary1"
              }
            ]
          },
          {
            "type": "Container",
            "shrink": 1,
            "grow": 1,
            "items": "${items}",
            "alignItems": "${viewport.shape == 'round' ? 'center' : 'start'}",
            "justifyContent": "${viewport.shape == 'round' ? 'center' : 'start'}",
            "width": "100%"
          },
          {
            "type": "Text",
            "when": "${viewport.shape != 'round'}",
            "text": "${hint}",
            "style": "textStylePrimaryHint"
          }
        ]
      }
    }
  },
  "resources": [
    {
      "description": "Common colors, universal",
      "colors": {
        "colorSpeechBlue": "#0070BA",
        "colorSpeechGreen": "#629624",
        "colorSpeechPink": "#FF4D4B",
